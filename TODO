	$ brew cask install virtualbox

install vagrant
	curl - O https://dl.bintray.com/mitchellh/vagrant/vagrant_1.6.2.dmg
	sudo hdiutil attach vagrant_1.6.2.dmg 
	sudo installer -pkg /Volumes/Vagrant/Vagrant.pkg  -target /